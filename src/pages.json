{
    "easycom": {
        "autoscan": false,
        "custom": {
            "^fui-(.*)": "@/uni-modules/firstui/fui-$1/fui-$1.vue",
            "^PageContainer": "@/shared/components/page-container/page-container.vue",
            "^UploadGallery": "@/shared/components/upload-gallery.vue",
            "^UploadProgress": "@/shared/components/upload-progress.vue",
            "^SvgIcon": "@/shared/components/svg-icon.vue"
        }
    },
    "pages": [
        {
            "path": "pages/index/index",
            "style": {
                "navigationBarTitleText": "首页"
            },
            "meta": {
                "needLogin": false
            }
        },
        {
            "path": "pages/category/index",
            "style": {
                "navigationBarTitleText": "分类"
            },
            "meta": {
                "needLogin": false
            }
        },
        {
            "path": "pages/cart/index",
            "style": {
                "navigationBarTitleText": "购物车"
            },
            "meta": {
                "needLogin": false
            }
        },
        {
            "path": "pages/mine/index",
            "style": {
                "navigationBarTitleText": "我的"
            },
            "meta": {
                "needLogin": false
            }
        },
        {
            "path": "pages/demo/index",
            "style": {
                "navigationBarTitleText": "示例"
            },
            "meta": {
                "needLogin": false
            }
        }
    ],
    "tabBar": {
        "selectedColor": "#3bf7ff",
        "color": "#818181",
        "backgroundColor": "#ffffff",
        "list": [
            {
                "pagePath": "pages/index/index",
                "iconPath": "static/tabbar/home.png",
                "selectedIconPath": "static/tabbar/home-selected.png",
                "text": "首页"
            },
            {
                "pagePath": "pages/category/index",
                "iconPath": "static/tabbar/category.png",
                "selectedIconPath": "static/tabbar/category-selected.png",
                "text": "分类"
            },
            {
                "pagePath": "pages/cart/index",
                "iconPath": "static/tabbar/cart.png",
                "selectedIconPath": "static/tabbar/cart-selected.png",
                "text": "购物车"
            },
            {
                "pagePath": "pages/mine/index",
                "iconPath": "static/tabbar/mine.png",
                "selectedIconPath": "static/tabbar/mine-selected.png",
                "text": "我的"
            }
        ]
    },
    "globalStyle": {
        // #ifdef H5
        "navigationStyle": "custom",
        // #endif
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "uni-app",
        "navigationBarBackgroundColor": "#F8F8F8",
        "backgroundColor": "#F8F8F8"
    }
}
